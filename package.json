{
  "name": "titanium-editor-commons",
  "version": "0.4.2",
  "description": "",
  "main": "index.js",
  "author": "Axway, Inc. <npmjs@appcelerator.com>",
  "maintainers": [
    "Ewan Harris <eharris@axway.com>"
  ],
  "license": "Apache-2.0",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.ts": "npm run lint"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "scripts": {
    "commit": "git-cz",
    "compile": "tsc -p ./",
    "lint": "eslint --ext .ts src/ tests/",
    "prepack": "npm run compile",
    "release": "standard-version",
    "watch": "tsc -watch -p ./",
    "test": "JUNIT_REPORT_PATH=junit_report.xml nyc mocha tests/setup.ts tests/*-test.ts --reporter=mocha-jenkins-reporter"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/appcelerator/titanium-editor-commons.git"
  },
  "keywords": [],
  "devDependencies": {
    "@commitlint/cli": "^8.2.0",
    "@commitlint/config-conventional": "^8.2.0",
    "@seadub/danger-plugin-dependencies": "^0.1.0",
    "@seadub/danger-plugin-eslint": "^1.0.1",
    "@seadub/danger-plugin-junit": "^0.1.2",
    "@types/chai": "^4.2.4",
    "@types/fs-extra": "^8.0.1",
    "@types/got": "^9.6.9",
    "@types/mocha": "^5.2.7",
    "@types/mock-fs": "^4.10.0",
    "@types/node": "^8.10.54",
    "@types/semver": "^6.2.0",
    "@types/sinon": "^7.5.0",
    "@types/tmp": "^0.1.0",
    "@typescript-eslint/eslint-plugin": "^2.6.1",
    "@typescript-eslint/parser": "^2.6.1",
    "chai": "^4.2.0",
    "commitizen": "^4.0.3",
    "cz-conventional-changelog": "^3.0.2",
    "danger": "^9.2.4",
    "eslint": "^6.6.0",
    "eslint-config-axway": "^4.4.0",
    "eslint-plugin-mocha": "^6.2.1",
    "husky": "^3.0.9",
    "lint-staged": "^9.4.2",
    "mocha": "^7.1.0",
    "mocha-jenkins-reporter": "^0.4.2",
    "mock-fs": "^4.10.3",
    "nock": "^11.7.0",
    "nyc": "^14.1.1",
    "sinon": "^7.5.0",
    "standard-version": "^7.0.0",
    "tmp": "^0.1.0",
    "ts-node": "^8.4.1",
    "typescript": "^3.7.2"
  },
  "dependencies": {
    "appcd-subprocess": "^3.0.1",
    "fs-extra": "^8.1.0",
    "got": "^9.6.0",
    "libnpm": "^3.0.1",
    "semver": "^6.3.0",
    "titaniumlib": "^2.0.1"
  },
  "nyc": {
    "include": [
      "src/**/*.ts",
      "!src/**/*.d.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text",
      "html",
      "lcov",
      "cobertura"
    ],
    "sourceMap": true,
    "instrument": true,
    "all": true
  },
  "engines": {
    "node": ">=8.12.0"
  }
}
